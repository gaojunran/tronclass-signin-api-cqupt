// Prisma Schema文件
generator client {
  provider = "prisma-client"
  output = "../generated/prisma"
  runtime = "deno"
  moduleFormat = "esm"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  is_auto   Boolean  @default(true)
  created_at DateTime @default(now())
  
  cookies       Cookie[]
  scan_history  ScanHistory[]
  signin_history SigninHistory[]
  
  @@map("users")
}

model Cookie {
  id         String   @id @default(uuid())
  user_id    String
  value      String
  expires    DateTime?
  created_at DateTime @default(now())
  
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
  
  @@map("cookies")
}

model ScanHistory {
  id         String   @id @default(uuid())
  result     String
  user_id    String?
  created_at DateTime @default(now())
  
  user            User?           @relation(fields: [user_id], references: [id], onDelete: SetNull)
  signin_history  SigninHistory[]
  
  @@map("scan_history")
}

model SigninHistory {
  id               String   @id @default(uuid())
  user_id          String
  cookie           String?
  scan_history_id  String?
  request_data     Json?
  response_code    Int?
  response_data    Json?
  created_at       DateTime @default(now())
  
  user          User        @relation(fields: [user_id], references: [id], onDelete: Cascade)
  scan_history  ScanHistory? @relation(fields: [scan_history_id], references: [id], onDelete: SetNull)
  
  @@map("signin_history")
}

model Log {
  id         String   @id @default(uuid())
  action     String
  data       Json
  created_at DateTime @default(now())
  
  @@map("log")
}
